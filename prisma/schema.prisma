// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id          String    @id @default(uuid())
  created     DateTime  @default(now())
  email       String    @unique
  password    String
  name        String?
  items       Item[]
  messages    Message[] @relation("author")
}

model Item {
  id          String     @id @default(uuid())
  user        User       @relation(fields: [user_id], references: [id])
  user_id     String
  name        String
  price       Int
  image       String?
  description String?
  messages    Message[]  @relation("item")
}

model Message {
  id          String   @id @default(uuid())
  time        DateTime @default(now())
  text        String
  author      User     @relation("author", fields: [author_id], references: [id], onDelete: Cascade)
  author_id   String
  item        Item     @relation("item", fields: [item_id], references: [id], onDelete: Cascade)
  item_id     String
}
